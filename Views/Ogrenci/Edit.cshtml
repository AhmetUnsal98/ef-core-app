
@model Ogrenci

<h1>Öğrenci Güncelleme</h1>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="ogrenci" asp-action="Edit" method="post" >
    <input type="hidden" asp-for="OgrenciId" >
    <div class="mb-3 row">
        <label asp-for="OgrenciAd" class="form-label"></label>
        <input type="text" asp-for="OgrenciAd" class="form-control">
    </div>
    <div class="mb-3 row">
    <label asp-for="OgrenciSoyad" class="form-label"></label>
    <input type="text" asp-for="OgrenciSoyad" class="form-control">
    </div>
    <div class="mb-3 row">
        <label asp-for="Eposta" class="form-label"></label>
        <input type="text" asp-for="Eposta" class="form-control">
    </div>

    <div class="mb-3 row">
       <label asp-for="Telefon" class="form-label"></label>
        <input type="text" asp-for="Telefon" class="form-control">
    </div>
     
     <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
</div>
    <div class="col-4">
        <h3>Ogrencinin Sectigi Dersler</h3>
        <hr>
    <ul>
        @foreach(var item in @Model.KursKayitlari) {
        <li>
                @item.Kurs.Baslik
        </li>

        }
   
    </ul>
    </div>
</div>
