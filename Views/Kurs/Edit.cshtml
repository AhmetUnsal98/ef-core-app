
@model KursViewModel

<h1>Kurs Güncelleme</h1>
<hr>
<div class="row">
    <div class="col-8"><form asp-controller="kurs" asp-action="Edit" method="post" >
    <input type="hidden" asp-for="KursId" >
    <div class="mb-3 row">
        <label asp-for="Baslik" class="form-label"></label>
        <input type="text" asp-for="Baslik" class="form-control">
    </div>
   <div class="mb-3 row">
        <label asp-for="OgretmenId" class="form-label"></label>
        <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler"  class="form-control"></select>
    </div>
     <button type="submit" class="btn btn-primary">Kaydet</button>
</form></div>
        <div class="col-4">
            <h4>Kursa Kayitli Öğrenciler</h4>
            <ul>
             @foreach(var item in Model.KursKayitlari) {
                <li>
                    @item.Ogrenci.OgrenciAd
                </li>
             }
            </ul>
        </div>
</div>

