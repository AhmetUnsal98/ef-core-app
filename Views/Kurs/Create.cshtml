
@model Kurs

<h1>Kurst Kayit</h1>
<form asp-controller="Kurs" asp-action="Create" method="post" >
    <div class="mb-3 row">
        <label asp-for="Baslik" class="form-label"></label>
        <input type="text" asp-for="Baslik" class="form-control">
    </div>
    <div class="mb-3 row">
        <label asp-for="OgretmenId" class="form-label"></label>
        <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler"  class="form-control"></select>
    </div>
     <button type="submit" class="btn btn-primary">Kaydet</button>
</form>